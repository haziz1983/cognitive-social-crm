{
  "name": "cognitive-social-crm",
  "version": "1.0.0",
  "description": "Cognitive Social CRM  App",
  "main": "app.js",
  "scripts": {
    "app-install": "npm run install:client && npm run install:server",
    "install:client": "cd client && npm install",
    "install:server": "cd server1 && npm install",
    "start": "concurrently \"npm run start:client\" \"npm run start:server\"",
    "start:client": "cd client && npm start",
    "start:server": "cd server1 && npm start",
    "start:prod": "export NODE_ENV=production && cd server && node server.js",
    "build": "\"npm run build:client\"",
    "postbuild": "cp server1/.env dist/server1/ && cp package.json dist/ && cp client/package.json dist/client && cp server1/package.json dist/server1",
    "prebuild": "rm -rf dist",
    "build:client": "cd client && npm run build:prod",
    "build:prod": "\"npm run preinstall:client\" && \"npm run build:clientProd\"",
    "build:clientProd": "cd client && npm run build:prod",
    "test:client": "cd client && npm test",
    "pretest:client": "cd client && npm run lint"
  },
  "author": "Sanjeev Ghimire",
  "license": "Apache-2.0",
  "dependencies": {
    "concurrently": "^3.6.1"
  },
  "devDependencies": {
    "tslint-eslint-rules": "^5.4.0"
  }
}
